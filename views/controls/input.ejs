<div class="grid grid-pad">
	<div class="col-1-2">
		<h1>
			User Input
		</h1>

		<div class="field">
      <label class="required" for="input-standard">Label (Required)</label>
		  <input type="text" value="Data (standard field)" id="input-standard">
		</div>

		<div class="field">
      <label for="input-focused">Label</label>
		  <input type="text" class="is-focused" value="Data (field in focus state)" id="input-focused">
		</div>

		<div class="field">
      <span class="data">Data <br>
		  (Read Only views presentation is more natural for easier comprehnsion of the data)
		  </span>
		</div>

		<div class="field">
      <label for="input-disabled">Label</label>
		  <input type="text" disabled value="Data (disabled field)" id="input-disabled">
		</div>

    <div class="field">
      <label for="input-error">Label</label>
      <input type="text" class="has-error" value="Incorrect Information (error state)" id="input-error">
    </div>

	</div>

</div>
